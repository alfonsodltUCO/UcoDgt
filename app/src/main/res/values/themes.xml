<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UcoDgt" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="background">@color/softpurple</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="MenuItemStyle" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textSize">20sp</item> <!-- Ajusta el tamaño de la letra según tus necesidades -->
    </style>
    <style name="splash" parent="Theme.UcoDgt">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="SpinnerTextStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:textSize">90sp</item>
    </style>
    <style name="ProgressBarWhite" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="color">@color/black</item>
    </style>
</resources>
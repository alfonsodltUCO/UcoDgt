<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/common"

    android:layout_height="match_parent">

    <pl.droidsonroids.gif.GifImageView
        android:layout_marginTop="@dimen/fab_margin_16"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_weight="0.1"
        android:src="@drawable/animatedlogo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/textViewLicencePlate"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Introduce the licence plate"
                android:textSize="30sp"
                />

            <TextView
                android:id="@+id/textViewCarType"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Introduce the car type"
                android:textSize="30sp"
                />

            <TextView
                android:id="@+id/textViewColor"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Introduce the color"
                android:textSize="30sp"
                />



            <TextView
                android:id="@+id/textViewDniClient"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Introduce the dni of client"
                android:textSize="30sp"
                />

            <TextView
                android:id="@+id/textViewIdInsurance"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Introduce the id of insurance"
                android:textSize="30sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextLicencePlate"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textCursorDrawable="@color/white"
                android:outlineSpotShadowColor="@color/white"
                android:layout_weight="1"
                android:autofillHints=""
                android:ems="10"
                android:textSize="30sp"
                android:inputType="text"
                android:layout_gravity="bottom"
                android:hint="4355JVJ"
                android:backgroundTint="@android:color/transparent"/>

            <Spinner
                android:id="@+id/carType"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:backgroundTint="@android:color/transparent"
                android:ems="10"
                android:layout_gravity="top"
                android:gravity="top"
                android:textSize="30sp"
                android:spinnerStyle="@style/SpinnerTextStyle" />

            <Spinner
                android:id="@+id/colorType"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:backgroundTint="@android:color/transparent"
                android:ems="10"
                android:layout_gravity="top"
                android:gravity="top"
                android:textSize="30sp"
                android:spinnerStyle="@style/SpinnerTextStyle" />


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextDniVehicleToAdd"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textCursorDrawable="@color/white"
                android:outlineSpotShadowColor="@color/white"
                android:layout_weight="1"
                android:autofillHints=""
                android:ems="10"
                android:textSize="30sp"
                android:inputType="text"
                android:layout_gravity="bottom"
                android:hint="31878744P"
                android:backgroundTint="@android:color/transparent"/>


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextIdInsurance"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textCursorDrawable="@color/white"
                android:outlineSpotShadowColor="@color/white"
                android:layout_weight="1"
                android:autofillHints=""
                android:ems="10"
                android:textSize="30sp"
                android:inputType="number"
                android:hint="1"
                android:backgroundTint="@android:color/transparent"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        >
        <Button
            android:id="@+id/checkAddVehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:singleLine="true"
            android:textSize="30sp"
            android:layout_marginEnd="60sp"
            android:text="Add Vehicle"
            >

        </Button>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100sp"
            android:layout_gravity="center"
            android:src="@drawable/vehicles"
            >

        </ImageView>

        <Button
            android:id="@+id/goMainMenu"
            android:layout_width="wrap_content"
            android:textSize="30sp"
            android:singleLine="true"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="60sp"
            android:text="Go main menu"
            >

        </Button>
    </LinearLayout>
</LinearLayout>


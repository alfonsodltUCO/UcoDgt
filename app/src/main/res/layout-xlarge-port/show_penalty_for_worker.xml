<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common"
    android:orientation="vertical"
    >
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:src="@drawable/animatedlogo" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="0.7">

        <TextView
            android:id="@+id/textviewpageinfo"
            android:layout_width="0dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:singleLine="true"
            android:gravity="center|top"
            android:text="Penalty found:"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_weight="0.9"
            android:layout_marginRight="500dp"
            android:gravity="start">

            <ImageView
                android:id="@+id/imageShow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="1">

            </ImageView>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/plata"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:orientation="horizontal">
                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/plata" />

                <TextView
                    android:id="@+id/tvId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:layout_marginRight="40sp"
                    android:layout_marginLeft="40sp"
                    android:text="Introduce the id"
                    android:textSize="30sp"
                    />
                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/plata" />


                <TextView
                    android:id="@+id/tvDate"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="40sp"
                    android:layout_marginLeft="40sp"                    android:text="Introduce date"
                    android:textSize="30sp"
                    />
                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/plata" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/plata"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">
                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/plata" />

                <TextView
                    android:id="@+id/tvDniC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:layout_marginRight="40sp"
                    android:layout_marginLeft="40sp"                    android:text="Introduce dni of client"
                    android:textSize="30sp"
                    />

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/plata" />


                <TextView
                    android:id="@+id/tvDniW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="40sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="40sp"                    android:text="Introduce dni of worker"
                    android:textSize="30sp"
                    />
                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/plata" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/plata"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">
                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/plata" />

                <TextView
                    android:id="@+id/tvState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:layout_marginRight="40sp"
                    android:layout_marginLeft="40sp"
                    android:text="Introduce the state"
                    android:textSize="30sp"
                    />
                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/plata" />


                <TextView
                    android:id="@+id/tvReason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:layout_marginRight="40sp"
                    android:layout_marginLeft="40sp"
                    android:text="Introduce the reason"
                    android:textSize="30sp"
                    />
                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/plata" />

                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="40sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="40sp"
                    android:text="Introduce the quantity"
                    android:textSize="30sp"
                    />
                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/plata" />

                <TextView
                    android:id="@+id/tvPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="40sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="40sp"
                    android:text="Introduce the points"
                    android:textSize="30sp"
                    />
                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/plata" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/plata"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/plata" />


                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="500sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="40sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="40sp"
                    android:text="Introduce the description"
                    android:textSize="30sp"
                    />
                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/plata" />

                <TextView
                    android:id="@+id/tvLicenceP"
                    android:layout_marginRight="40sp"
                    android:layout_marginLeft="40sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:text="Introduce the licence plate"
                    android:textSize="30sp"
                    />
                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/plata" />


            </LinearLayout>
        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/plata"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:id="@+id/goMainMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:text="Go main menu"
            >


        </Button>

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:src="@drawable/multaanimada" />

        <Button
            android:id="@+id/cancelPenalty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:text="Cancel Penalty"
            >

        </Button>

    </LinearLayout>

</LinearLayout>

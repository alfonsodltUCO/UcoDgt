<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"

    android:layout_height="match_parent">

    <pl.droidsonroids.gif.GifImageView
        android:layout_marginTop="@dimen/fab_margin_16"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_weight="0.1"
        android:src="@drawable/animatedlogo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/textViewLicencePlate"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Introduce the licence plate"
                android:textSize="30sp"
                />

            <TextView
                android:id="@+id/textViewCarType"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Introduce the car type"
                android:textSize="30sp"
                />

            <TextView
                android:id="@+id/textViewColor"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Introduce the color"
                android:textSize="30sp"
                />

            <TextView
                android:id="@+id/textViewItvFrom"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Valid itv from"
                android:textSize="30sp"
                />

            <TextView
                android:id="@+id/textViewItvTo"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Valid itv until"
                android:textSize="30sp"
                />

            <TextView
                android:id="@+id/textViewDniClient"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Introduce the dni of client"
                android:textSize="30sp"
                />

            <TextView
                android:id="@+id/textViewIdInsurance"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Introduce the id of insurance"
                android:textSize="30sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <EditText
                android:id="@+id/editTextLicencePlate"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:ems="10"
                android:textSize="30sp"
                android:inputType="text"
                android:text="4355JVJ"
                android:backgroundTint="@android:color/transparent"
                />
            <Spinner
                android:id="@+id/carType"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:backgroundTint="@android:color/transparent"
                android:ems="10"
                android:textSize="30sp"
                android:spinnerStyle="@style/SpinnerTextStyle" />

            <Spinner
                android:id="@+id/colorType"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:backgroundTint="@android:color/transparent"
                android:ems="10"
                android:textSize="30sp"
                android:spinnerStyle="@style/SpinnerTextStyle" />

            <EditText
                android:id="@+id/editTextValidItvFrom"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:ems="10"
                android:textSize="30sp"
                android:text="2002-10-10"
                android:inputType="datetime"
                android:backgroundTint="@android:color/transparent"
                />

            <EditText
                android:id="@+id/editTextValidItvTo"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:ems="10"
                android:textSize="30sp"
                android:inputType="datetime"
                android:text="2004-10-11"
                android:backgroundTint="@android:color/transparent"
                />

            <EditText
                android:id="@+id/editTextDniVehicleToAdd"
                android:backgroundTint="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:ems="10"
                android:textSize="30sp"
                android:inputType="text"
                android:text="31898887A"
                />

            <EditText
                android:backgroundTint="@android:color/transparent"
                android:id="@+id/editTextIdInsurance"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:ems="10"
                android:textSize="30sp"
                android:inputType="number"
                android:text="1"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        >
        <Button
            android:id="@+id/checkAddVehicle"
            android:layout_width="wrap_content"
            android:layout_height="100sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:singleLine="true"
            android:textSize="30sp"
            android:layout_marginEnd="60sp"
            android:text="Add Vehicle"
            >

        </Button>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100sp"
            android:layout_gravity="center"
            android:src="@drawable/vehicles"
            >

        </ImageView>

        <Button
            android:id="@+id/goMainMenu"
            android:layout_width="wrap_content"
            android:textSize="30sp"
            android:singleLine="true"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_height="100sp"
            android:layout_marginStart="60sp"
            android:text="Go main menu"
            >

        </Button>
    </LinearLayout>
</LinearLayout>


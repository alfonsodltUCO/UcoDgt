<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    android:layout_height="match_parent">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_weight="0.1"
        android:layout_gravity="center"
        android:src="@drawable/animatedlogo" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tvCDni"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Client DNI"
                android:textSize="30sp"
                />


            <TextView
                android:id="@+id/tvReason"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Reason"
                android:textSize="30sp"

                />
            <TextView
                android:id="@+id/tvPlace"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Place"
                android:textSize="30sp"

                />
            <TextView
                android:id="@+id/tvInformed"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Informed at the moment"
                android:textSize="30sp"

                />
            <TextView
                android:id="@+id/tvLocality"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Locality"
                android:textSize="30sp"

                />
            <TextView
                android:id="@+id/tvLicencePlate"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Licence Plate"
                android:textSize="30sp"

                />

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Quantity"
                android:textSize="30sp"
 />

            <TextView
                android:id="@+id/tvPoints"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Points"
                android:textSize="30sp"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/etCDni"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:ems="10"
                android:textSize="30sp"
                android:text="31878744P"
                android:backgroundTint="@android:color/transparent"
                />

            <Spinner
                android:id="@+id/Reason"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:backgroundTint="@android:color/transparent"
                android:ems="10"
                android:textSize="30sp"
                android:spinnerStyle="@style/SpinnerTextStyle" />




            <EditText
                android:backgroundTint="@android:color/transparent"
                android:id="@+id/etPlace"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:autofillHints=""
                android:ems="10"
                android:inputType="text"
                android:text="Avenida America"
                />
            <Spinner
                android:id="@+id/Informed"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:backgroundTint="@android:color/transparent"
                android:ems="10"
                android:textSize="30sp"
                android:spinnerStyle="@style/SpinnerTextStyle" />
            <EditText
                android:backgroundTint="@android:color/transparent"
                android:id="@+id/etLocality"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:ems="10"
                android:textSize="30sp"
                android:inputType="text"
                android:text="Cordoba"
                />
            <EditText
                android:backgroundTint="@android:color/transparent"
                android:id="@+id/etLicencePlate"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:ems="10"
                android:textSize="30sp"
                android:inputType="text"
                android:text="3289JVJ"
                />
            <EditText
                android:backgroundTint="@android:color/transparent"
                android:id="@+id/etQuantity"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:ems="10"
                android:textSize="30sp"
                android:inputType="number"
                android:text="200"
                />
            <EditText
                android:backgroundTint="@android:color/transparent"
                android:id="@+id/etPoints"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:ems="10"                android:textSize="30sp"
                android:inputType="number"
                android:text="4"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_weight="0.3">

        <Button
            android:id="@+id/goNext"
            android:layout_width="wrap_content"
            android:layout_height="100sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:singleLine="true"
            android:textSize="30sp"
            android:layout_marginEnd="60sp"
            android:text="Add description">

        </Button>

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/fab_margin_16"
            android:layout_marginBottom="@dimen/fab_margin_16"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:src="@drawable/multaanimada" />


        <Button
            android:id="@+id/goMainMenu"
            android:layout_width="wrap_content"
            android:textSize="30sp"
            android:singleLine="true"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_height="100sp"
            android:layout_marginStart="60sp"
            android:text="Go main menu">

        </Button>
    </LinearLayout>
</LinearLayout>

